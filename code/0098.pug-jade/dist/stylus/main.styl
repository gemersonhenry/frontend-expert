$width-card-user = 300px
$height-card-user = 450px
$border-radius = 8px

.card-users
  background-color lightgray
  display flex
  flex-wrap wrap
  justify-content center
  .card-user
    width $width-card-user
    height $height-card-user
    margin 20px
    box-sizing border-box
    border 1px solid blue
    border-radius $border-radius
    .card-user-top
      position relative
      border-top-left-radius $border-radius
      border-top-right-radius $border-radius
      width 100%
      height 0.4*$height-card-user
      background-color white
      .card-user-image
        position absolute
        height 0.4*$width-card-user
        width 0.4*$width-card-user
        background-color lightblue
        border-radius 50%
        right 0.3*$width-card-user
        bottom -0.2*$width-card-user
    .card-user-content
      height 0.595*$height-card-user
      width 100%
      border-bottom-left-radius $border-radius
      border-bottom-right-radius $border-radius
      background-color lightgreen
      display flex
      flex-direction column
      justify-content center
      align-items center
      span
        margin-top 20px
      .card-user-home
        padding 10px 20px
        border-radius $border-radius
        background-color red
        font-weight bold
        color white
