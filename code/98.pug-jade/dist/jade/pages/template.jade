- var numbers_of_users = 10
- var user_texts = ['Gemerson Henry', 'FRONT END DEVELOPER', 'PERÚ']
- var user_link = "HOME"
include atoms/card-user-image.jade
include atoms/card-user-text.jade
include atoms/card-user-link.jade

doctype
html(lang='en')
  head
    meta(charset='utf-8')
    title Primera aplicación con Jade y Stylus
    link(rel="stylesheet", href="../css/main.css")
  body
    section.card-users
      - for (var i = 0; i < numbers_of_users; i++)
        article.card-user
          .card-user-top            
            +card-user-image("../images/foto_personal_cuadrada.jpg", "Personal")            
          .card-user-content
            - for (var j = 0; j < user_texts.length; j++) 
              +card-user-text(user_texts[j])
            +card-user-link(user_link)
